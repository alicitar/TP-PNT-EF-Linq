@model InstitutoIdioma.Models.Examen

@{
    ViewData["Title"] = "Eliminar";
}

<h1>Eliminar</h1>

<h3>¿Está seguro que quiere eliminar este examen?</h3>
<div>
    <h4>Examen</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
    </dl>
    <div><p>Preguntas</p></div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Enunciado
                </th>
                <th>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Preguntas)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Enunciado)
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a href="javascript:void(0);" onclick="history.go(-1);">Volver</a>
    </form>
</div>
