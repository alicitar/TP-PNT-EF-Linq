@model InstitutoIdioma.Models.Opcion

@{
    ViewData["Title"] = "Create";
}


<h1>Creación de opcion para la pregunta: @Model.Pregunta.Enunciado</h1>

<h1>Create</h1>

<h4>Opcion</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Texto" class="control-label"></label>
                <input asp-for="Texto" class="form-control" />
                <span asp-validation-for="Texto" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="EsCorrecta" /> @Html.DisplayNameFor(model => model.EsCorrecta)
                </label>
            </div>
            <input asp-for="Pregunta.Id" hidden />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="javascript:void(0);" onclick="history.go(-1);">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
