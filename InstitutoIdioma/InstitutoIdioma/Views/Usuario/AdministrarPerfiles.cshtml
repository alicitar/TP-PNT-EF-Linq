@model InstitutoIdioma.Models.SelectorUsuario

@{
    ViewData["Title"] = "Asignación de Perfiles";
}
<body>
    <div class="container-form col-md-7">
        <p class="titulo"> Asignación de Perfiles </p>
        <form asp-action="AsignarPerfil" method="post">
            <div class="form-group">
                <label asp-for="Usuarios" class="control-label"></label>
                <br />
                @Html.ListBoxFor(x => x.Seleccionados, Model.Usuarios, new { style= "width:600px"})
                <br />
            </div>
            <div class="form-group">
                <label asp-for="Perfil" class="control-label"></label>
                @Html.DropDownListFor(m => m.Perfil, Html.GetEnumSelectList<TipoPerfil>().Where(x=> x.Text != "ADMINISTRADOR" && x.Text != "SinAsignar"), new { @class = "form-control" })
            </div>
            <div class="row">
                <input class="btn btn-primary" type="submit" id="AsignarPerfiles" value="Guardar Cambios">
            </div>
        </form>
        <p style="color:#971e1e; text-align:center;">@ViewBag.Error</p>
    </div>
</body>